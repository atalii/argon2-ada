with "argon2ada.gpr";

project Tests is
   for Object_Dir   use "obj";
   for Exec_Dir     use "bin";

   for Main use ("test.adb");

   for Source_Dirs use ("./tests");

   package Compiler is
      for Default_Switches ("Ada") use ("-g", "-O0", "-gnat2022");
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use ("-largon2");
   end Linker;
end Tests;
